{
	"manifest_version": 2,
	"name": "StreamScript",
	"version": "2.2.1",
	"author": "RC-14",
	"description": "Redirects to the source video, adds extra controls to mp4 files and more QOL improvements.",
	"icons": {
		"48": "icons/48.png",
		"96": "icons/96.png"
	},
	"background": {
		"scripts": ["js/background.js"]
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>", "file:///*", "file:///*?*"],
			"all_frames": true,
			"js": ["js/content.js"],
			"run_at": "document_idle"
		}
	],
	"permissions": ["<all_urls>"]
}
