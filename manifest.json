{
    "manifest_version": 2,
    "name": "StreamScript",
    "version": "1.6.1",
    "author": "RC-14",
    "description": "Redirects to the source video and adds extra controls to mp4 files.",
    "icons": {
        "48": "icons/48.png",
        "96": "icons/96.png"
    },
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.vivo.sx/*",
                "*://*.vivo.st/*",
                "*://streamta.pe/*",
                "*://streamtape.com/*",
                "*://streamtape.site/*",
                "*://strtape.tech/*",
                "*://strtape.cloud/*",
                "*://strtape.site/*",
                "*://strcloud.in/*",
                "*://strcloud.link/*",
                "*://vidoza.net/*",
                "*://mixdrop.co/*",
                "*://*/*.mp4",
                "*://*/*.mp4?*",
                "file:///*.mp4",
                "file:///*.mp4?*"
            ],
            "all_frames": true,
            "js": [
                "js/content.js"
            ]
        }
    ],
    "permissions": [
        "<all_urls>"
    ]
}